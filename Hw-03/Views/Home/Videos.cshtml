@using Hw_03.Models

@model List<FileModel>

    @{
        ViewBag.Title = "Videos";
    }

    <h2>Videos</h2>

    <div class="container">
        <div class="card-flex">
            @foreach (FileModel FileN in Model)// foreach and get all the videos
            {
                <div class="col-sm-4">
                    <div class="row" style="width:200px;">
                        <video controls>
                            <source src="@Url.Content("~Media/Videos")@FileN.FileName"type="video/mp4"/>
                        </video>
                        <div class="card-body">
                            <button class="btn btn-success">
                            @Html.ActionLink("Download", "DownloadVides", new { FileName = FileN.FileName})
                                    </button>
                             <button class="btn btn-danger">     
                            @Html.ActionLink("Delete", "DeleteVides", new { FileName = FileN.FileName })
                                 </button>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>